<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="@color/Mint">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_icon"
        android:background="@color/fullyTransparentColor"
        android:padding="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleTv"
        android:padding="5dp"
        android:text="Add Comment"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/commentTil"
        android:layout_below="@id/back"
        android:layout_marginTop="20dp">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/commentEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textCapSentences"
            android:drawableStart="@drawable/comment_black_icon"
            android:drawablePadding="10dp"
            android:drawableTint="@color/mediumGray"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:hint="Comment"/>


    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submitButton"
        android:layout_below="@+id/commentTil"
        android:text="Submit"
        android:backgroundTint="@color/Aquamentus_Green"/>


</RelativeLayout>